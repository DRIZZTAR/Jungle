<h1>Admin Dashboard</h1>

<div class="container mt-4">
  <div class="row">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          Products
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= @product_count %> Products Available</h5>
          <%= link_to 'View Products', products_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          Categories 
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= @categories.count %> Categories Available</h5>
          <% @categories.each do |category| %>
            <%= link_to category.name, category_path(category), class: 'btn btn-primary' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

